---
import '../../styles/global.css';
import { AstroSeo } from '@astrolib/seo';
import { getImage } from 'astro:assets';
import gradientBackground from '../../assets/images/gradient-background-7680x4320-11027.jpg';

const optimizedBackground = await getImage({
  src: gradientBackground,
  width: 3840,
});
---

<!-- Core meta tags -->
<meta charset='UTF-8' />
<meta http-equiv='X-UA-Compatible' content='IE=edge' />
<meta
  name='viewport'
  content='width=device-width, initial-scale=1, maximum-scale=1'
/>
<meta name='author' content='John Doe' />
<!-- Replace with your name -->

<!-- SEO Configuration - customize these values -->
<AstroSeo
  title={Astro.props.title || 'John Doe - Full Stack Developer'}
  description={Astro.props.description ||
    'Full Stack Developer based in Austin, TX specializing in React, Node.js, and modern web technologies'}
  canonical={Astro.props.canonical || 'https://johndoe.com'}
  openGraph={{
    url: Astro.props.openGraph?.url || 'https://johndoe.com',
    title: Astro.props.openGraph?.title || 'John Doe - Full Stack Developer',
    description:
      Astro.props.openGraph?.description ||
      'Full Stack Developer based in Austin, TX specializing in React, Node.js, and modern web technologies',
    images: [
      {
        url: '',
        // og image here
      },
    ],
    site_name: Astro.props.openGraph?.site_name || 'John Doe',
  }}
/>

<!-- Add your favicon files in public/images/ -->
<link rel='apple-touch-icon' sizes='180x180' href='/images/YOUR_FAVICON.svg' />
<link
  rel='icon'
  type='image/png'
  sizes='32x32'
  href='/images/YOUR_FAVICON.svg'
/>
<link
  rel='icon'
  type='image/png'
  sizes='16x16'
  href='/images/YOUR_FAVICON.svg'
/>

<!-- Theme colors for browsers -->
<meta name='msapplication-TileColor' content='YOUR_COLOR_HEX' />
<meta name='theme-color' content='YOUR_COLOR_HEX' />

<!-- Auto-generated sitemap -->
<link rel='sitemap' href='/sitemap-index.xml' />

<!-- Preload background image for performance -->
<link
  rel='preload'
  href={optimizedBackground.src}
  as='image'
  type='image/webp'
  fetchpriority='high'
/>
